<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <!-- 안눌렸을때-->
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#FF0000" />
            <size
                android:height="21dp"
                android:width="30dp"/>
            <solid
                android:color="#101F1F1F"
                />
            <corners
                android:radius="3dp"
                />
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape>
            <stroke
                 android:width="1dp"
                android:color="#FF0000" />
            <size
                android:height="21dp"
                android:width="30dp"/>
            <solid
                android:color="#FF0000"
                />
            <corners
                android:radius="3dp"
                />
        </shape>
    </item>
</selector >