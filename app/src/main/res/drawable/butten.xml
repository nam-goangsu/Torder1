<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <!-- 안눌렸을때-->
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <size
                android:height="21dp"
                android:width="21dp"/>
            <solid
                android:color="#000000"
                />
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <size
                android:height="21dp"
                android:width="21dp"/>
            <solid
                android:color="#000000"
                />
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
</selector >